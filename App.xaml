<Application x:Class="StadiumManagementSystem.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/StringResources.en.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <h:StatusToColorConverter x:Key="StatusToColorConverter" xmlns:h="clr-namespace:StadiumManagementSystem.Helpers"/>

            <Style x:Key="SidebarButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="15,10"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Margin" Value="0,5"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#3E7BB0"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <DropShadowEffect x:Key="CardShadow" BlurRadius="10" ShadowDepth="2" Color="Gray" Opacity="0.2"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
