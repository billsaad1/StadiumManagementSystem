<UserControl x:Class="StadiumManagementSystem.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <TextBlock Text="{DynamicResource Settings}" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource PrimaryColor}" Margin="0,0,0,20"/>

                <TextBlock Text="{DynamicResource OrganizationName}" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Settings.OrganizationName}" Margin="0,0,0,15" Padding="5"/>

                <TextBlock Text="Logo" Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="80" Height="80" BorderBrush="Gray" BorderThickness="1" Margin="0,0,10,0">
                        <Image Source="{Binding Settings.LogoPath}"/>
                    </Border>
                    <Button Grid.Column="1" Content="Upload Logo" Command="{Binding UploadLogoCommand}" VerticalAlignment="Center" Padding="5"/>
                </Grid>

                <TextBlock Text="Phone" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Settings.Phone}" Margin="0,0,0,15" Padding="5"/>

                <TextBlock Text="Address" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Settings.Address}" Margin="0,0,0,15" Padding="5"/>

                <TextBlock Text="Evening Cutoff Hour (24h)" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Settings.EveningCutoffHour}" Margin="0,0,0,15" Padding="5"/>

                <TextBlock Text="App Theme Color" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding ThemeColors}" SelectedItem="{Binding Settings.ThemeColor}" Margin="0,0,0,15" Padding="5">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="20" Height="20" Background="{Binding}" Margin="0,0,10,0" BorderBrush="Black" BorderThickness="1"/>
                                <TextBlock Text="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Text="{DynamicResource ManagerName}" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Settings.ManagerName}" Margin="0,0,0,15" Padding="5"/>

                <TextBlock Text="{DynamicResource Location}" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Settings.Location}" Margin="0,0,0,15" Padding="5"/>

                <Button Content="{DynamicResource Save}" Command="{Binding SaveCommand}"
                        Padding="10" Background="{DynamicResource PrimaryColor}" Foreground="White" FontWeight="Bold"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Stadiums Management" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource PrimaryColor}" Margin="0,0,0,20"/>

                <DataGrid ItemsSource="{Binding Stadiums}" SelectedItem="{Binding SelectedStadium}" AutoGenerateColumns="False" Height="300" Margin="0,0,0,10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Morning Price" Binding="{Binding MorningPrice}" Width="100"/>
                        <DataGridTextColumn Header="Evening Price" Binding="{Binding EveningPrice}" Width="100"/>
                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>

                <UniformGrid Columns="3">
                    <Button Content="Add Stadium" Command="{Binding AddStadiumCommand}" Padding="10" Margin="0,0,5,0"/>
                    <Button Content="Save Stadiums" Command="{Binding SaveStadiumsCommand}" Padding="10" Margin="5,0,5,0"/>
                    <Button Content="Delete" Command="{Binding DeleteStadiumCommand}" Padding="10" Margin="5,0,0,0" Foreground="Red"/>
                </UniformGrid>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
