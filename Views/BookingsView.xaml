<UserControl x:Class="StadiumManagementSystem.Views.BookingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="{DynamicResource Bookings}" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource PrimaryColor}"/>
            <Button Content="New Booking" Command="{Binding NewBookingCommand}" HorizontalAlignment="Right" Padding="15,5" Background="#28A745" Foreground="White" BorderThickness="0"/>
        </DockPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding RecentBookings}" AutoGenerateColumns="False" 
                  IsReadOnly="True" Background="White" BorderThickness="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Number" Binding="{Binding BookingNumber}" Width="*"/>
                <DataGridTextColumn Header="Date" Binding="{Binding BookingDate, StringFormat=d}" Width="*"/>
                <DataGridTextColumn Header="Stadium" Binding="{Binding Stadium}" Width="*"/>
                <DataGridTextColumn Header="Time Slot" Binding="{Binding TimeSlot}" Width="*"/>
                <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="*"/>
                <DataGridTextColumn Header="Total" Binding="{Binding TotalPrice, StringFormat='{}{0} YER'}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding PaymentStatus}" Width="*"/>
                <DataGridTemplateColumn Header="Actions" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="WA" Command="{Binding DataContext.SendWhatsAppCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Margin="2" Background="#25D366" Foreground="White" BorderThickness="0" Padding="5,2"/>
                                <Button Content="PR" Command="{Binding DataContext.PrintReceiptCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Margin="2" Background="#1F4E78" Foreground="White" BorderThickness="0" Padding="5,2"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
