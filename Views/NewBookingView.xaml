<Window x:Class="StadiumManagementSystem.Views.NewBookingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Booking" Height="500" Width="400"
        WindowStartupLocation="CenterOwner" Background="#F0F2F5">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Customer Name" Margin="0,0,0,5"/>
            <TextBox Text="{Binding CustomerName}" Margin="0,0,0,15" Padding="5"/>

            <TextBlock Text="Phone" Margin="0,0,0,5"/>
            <TextBox Text="{Binding CustomerPhone}" Margin="0,0,0,15" Padding="5"/>

            <TextBlock Text="Date" Margin="0,0,0,5"/>
            <DatePicker SelectedDate="{Binding BookingDate}" Margin="0,0,0,15"/>

            <TextBlock Text="Stadium" Margin="0,0,0,5"/>
            <ComboBox SelectedItem="{Binding Stadium}" Margin="0,0,0,15">
                <ComboBoxItem Content="Stadium 1"/>
                <ComboBoxItem Content="Stadium 2"/>
            </ComboBox>

            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                    <TextBlock Text="Start Hour (1-24)"/>
                    <TextBox Text="{Binding StartHour}" Padding="5"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                    <TextBlock Text="End Hour (1-24)"/>
                    <TextBox Text="{Binding EndHour}" Padding="5"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="{Binding TotalPrice, StringFormat='Total: {0} YER'}" 
                       FontSize="18" FontWeight="Bold" Foreground="#28A745" Margin="0,0,0,20"/>

            <Button Content="Save Booking" Command="{Binding SaveCommand}" 
                    Padding="10" Background="#28A745" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
