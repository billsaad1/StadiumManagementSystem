<UserControl x:Class="StadiumManagementSystem.Views.FinancialsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="{DynamicResource Financials}" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource PrimaryColor}"/>
            <Button Content="Print Report" Command="{Binding PrintReportCommand}" HorizontalAlignment="Right" Padding="15,5" Background="{DynamicResource PrimaryColor}" Foreground="White" BorderThickness="0"/>
        </DockPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker SelectedDate="{Binding StartDate}" Width="150" Margin="0,0,20,0"/>
            <TextBlock Text="To:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker SelectedDate="{Binding EndDate}" Width="150"/>
        </StackPanel>

        <UniformGrid Grid.Row="2" Columns="2" VerticalAlignment="Top" Height="150">
            <Border Background="White" Margin="0,0,10,0" Padding="20" CornerRadius="8" Effect="{StaticResource CardShadow}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Bookings in Range" Foreground="Gray" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalBookings}" FontSize="36" FontWeight="Bold" Foreground="{DynamicResource PrimaryColor}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <Border Background="White" Margin="10,0,0,0" Padding="20" CornerRadius="8" Effect="{StaticResource CardShadow}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Revenue in Range" Foreground="Gray" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalRevenue, StringFormat='{}{0:N0} YER'}" FontSize="36" FontWeight="Bold" Foreground="#28A745" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </UniformGrid>
    </Grid>
</UserControl>
